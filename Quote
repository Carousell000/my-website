<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Countdown with Daily Quotes</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 50px;
      background-color: #f5f5f5;
      color: #333;
    }
    #timer {
      font-size: 2em;
      margin-bottom: 20px;
    }
    #quote {
      font-size: 1.5em;
      margin-top: 20px;
      font-style: italic;
    }
  </style>
</head>
<body>
  <h1>Countdown to Event</h1>
  <div id="timer">Loading...</div>
  <div id="quote">Today's quote is loading...</div>
  <script>
    // Countdown Timer
    const targetDate = new Date("2025-12-31T00:00:00").getTime();
    function updateTimer() {
      const now = new Date().getTime();
      const timeLeft = targetDate - now;

      if (timeLeft <= 0) {
        document.getElementById("timer").innerText = "The event has started!";
        clearInterval(timerInterval);
        return;
      }

      const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

      document.getElementById("timer").innerText =
        `${days}d ${hours}h ${minutes}m ${seconds}s`;
    }
    const timerInterval = setInterval(updateTimer, 1000);

    // Daily Quote
    const quotes = [
      "The best way to predict the future is to invent it.",
      "Do something today that your future self will thank you for.",
      "Success is not the key to happiness. Happiness is the key to success.",
      "Every moment is a fresh beginning.",
      "Life is what happens when you’re busy making other plans.",
      "Don’t watch the clock; do what it does. Keep going."
    ];
    const today = new Date().getDate();
    document.getElementById("quote").innerText = quotes[today % quotes.length];
  </script>
</body>
</html>
